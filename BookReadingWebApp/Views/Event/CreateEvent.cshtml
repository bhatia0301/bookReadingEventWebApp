@model BookReadingApp.Core.Modals.Event

@{
    ViewData["Title"] = "Create Event";
}

<h1 class="text-info"> Create your Event</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateEvent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label font-weight-bold"></label>
                <input asp-for="Title" class="form-control input-sm" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label font-weight-bold"></label>
                <input asp-for="Date" class="form-control input-sm" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label font-weight-bold"></label>
                <input asp-for="StartTime" class="form-control input-sm" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label font-weight-bold"></label>
                <input asp-for="Location" class="form-control input-sm" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label font-weight-bold"></label>
                <input asp-for="Description" class="form-control input-sm" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label font-weight-bold"></label>
                <input asp-for="Duration" class="form-control input-sm" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Organiser" class="control-label font-weight-bold"></label>
                <input asp-for="Organiser" class="form-control input-sm" />
                <span asp-validation-for="Organiser" class="text-danger"></span>
            </div>
            <div class="form-group text-dark font-weight-bold">
                <label asp-for="EventType" class="control-label font-weight-bold"></label>&nbsp;
                <input type="radio" name="EventType" value="Public" checked />&nbsp;Public&nbsp;
                <input type="radio" name="EventType" value="Private" />&nbsp;Private&nbsp;
                <span asp-validation-for="EventType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Invitees" class="control-label font-weight-bold"></label>
                <input asp-for="Invitees" class="form-control" />
                <span asp-validation-for="Invitees" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts{

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}